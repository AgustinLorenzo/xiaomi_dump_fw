    /etc/init.d/miqos init_ipt

    #only active qos when boot-check is ready
    local stat=`cat /proc/xiaoqiang/boot_status 2>/dev/null`
    if [ "$stat" -eq "3" ]; then
        /etc/init.d/miqos restart
    fi

    return 0
}

